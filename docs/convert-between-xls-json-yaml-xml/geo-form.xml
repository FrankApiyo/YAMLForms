<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>gps-form</h:title>
    <model odk:xforms-version="1.0.0">
      <instance>
        <None id="gps-form">
          <store_name/>
          <store_gps/>
          <meta>
            <instanceID/>
          </meta>
        </None>
      </instance>
      <bind nodeset="/None/store_name" type="string"/>
      <bind nodeset="/None/store_gps" type="geopoint"/>
      <bind jr:preload="uid" nodeset="/None/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/None/store_name">
      <label>What is the name of this store?</label>
    </input>
    <input ref="/None/store_gps">
      <label>Collect the GPS coordinates of this store</label>
    </input>
  </h:body>
</h:html>

